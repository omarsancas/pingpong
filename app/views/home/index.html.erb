<h1 class='page-header'>Leaderboard</h1>

<% if @players %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <th>Rating</th>
        <th>Name</th>
      </thead>
      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.rating %></td>
            <td><%= player.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div>
<% else %>
  <div class="alert alert-warning" role="alert">None games in the database.</div>
<% end %>
