<h1 class='page-header'>Log Game</h1>

<%= form_for @game, url: log_path, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group<%= css_error_class_for(:played_at) %>">
    <label for="playedAt" class="col-sm-offset-3 col-sm-2 control-label">Date played:</label>
    <div class="col-sm-3 form-inline">
      <%= select_date @game.played_at, { prefix: :played_at }, { class: 'form-control' } %>
    </div>

    <%= error_helper_for(:played_at) %>
  </div>

  <div class="form-group<%= css_error_class_for(:opponent) %>">
    <label for="opponentId" class="col-sm-offset-3 col-sm-2 control-label">Opponent:</label>
    <div class="col-sm-3">
      <%= f.select :opponent_id, opponents, { include_blank: true }, { class: 'form-control' } %>
    </div>

    <%= error_helper_for(:opponent) %>
  </div>

  <div class="form-group<%= css_error_class_for(:player_score, :score) %>">
    <label for="userScore" class="col-sm-offset-3 col-sm-2 control-label">Your score:</label>
    <div class="col-sm-3">
      <%= f.number_field :player_score, class: 'form-control', id: 'userScore' %>
    </div>

    <%= error_helper_for(:player_score) %>
  </div>

  <div class="form-group<%= css_error_class_for(:opponent_score, :score) %>">
    <label for="opponentScore" class="col-sm-offset-3 col-sm-2 control-label">Their score:</label>
    <div class="col-sm-3">
      <%= f.number_field :opponent_score, class: 'form-control', id: 'opponentScore' %>
    </div>

    <%= error_helper_for(:opponent_score) %>
  </div>

  <div class="has-error text-center">
    <%= error_helper_for(:score, 'col-sm-12') %>
  </div>

  <div class="form-group text-center">
    <%= f.submit 'Create game', class: 'btn btn-primary' %>
  <div>
<% end %>
